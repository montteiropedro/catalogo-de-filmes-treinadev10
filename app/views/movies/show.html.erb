<div class="mx-auto max-w-[1280px] flex gap-4 rounded-lg">
  <div class="w-[max(35%,_300px)] h-[100%] overflow-hidden flex items-center justify-center border-2 border-neutral-700 bg-dark-theme rounded-lg">
    <% if @movie.poster.attached? %>
      <img src="<%= url_for(@movie.poster) %>" alt="film poster" class="w-full h-full object-cover">
    <% else %>
      <i class="fa-solid fa-film py-28 md:py-36 lg:py-48 text-6xl text-neutral-700"></i>
    <% end %>
  </div>

  <div class="w-full flex flex-col border-2 border-neutral-700 rounded-lg">
    <div class="p-6 h-[90px] flex items-center justify-between border-b-2 border-neutral-700">
      <h1 class="m-0 text-xl font-bold text-left"><%= @movie.title %></h1>

      <div class="w-[142px] flex gap-2">
        <%= link_to edit_movie_path(@movie), class: "w-full h-10 flex items-center justify-center bg-primary-500 hover:bg-primary-600 rounded-lg transition-all ease-in-out duration-300" do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
        <%= link_to movie_path(@movie), data: { turbo_method: :delete, turbo_confirm: 'Deseja deletar este filme?' }, class: "w-full h-10 flex items-center justify-center bg-danger-500 hover:bg-danger-600 rounded-lg transition-all ease-in-out duration-300" do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </div>

    <div class="p-6 flex gap-8 items-center bg-neutral-700 bg-opacity-30">
      <span class="w-[30%] font-bold">Ano de lançamento</span>
      <span class="w-full"><%= @movie.year %></span>
    </div>
    <div class="p-6 flex gap-8 items-center">
      <span class="w-[30%] font-bold">País de origem</span>
      <span class="w-full"><%= @movie.country %></span>
    </div>
    <div class="p-6 flex gap-8 items-center bg-neutral-700 bg-opacity-30">
      <span class="w-[30%] font-bold">Duração (min)</span>
      <span class="w-full"><%= @movie.duration %></span>
    </div>
    <div class="p-6 flex gap-8 items-center">
      <span class="w-[30%] font-bold">Diretor</span>
      <%= link_to @movie.director.name, director_path(@movie.director), class: "w-full underline underline-offset-4 hover:text-link-hover-color" %>
    </div>
    <div class="p-6 flex gap-8 items-center bg-neutral-700 bg-opacity-30">
      <span class="w-[30%] font-bold">Gênero</span>
      <%= link_to @movie.genre.name, genre_path(@movie.genre), class: "w-full underline underline-offset-4 hover:text-link-hover-color" %>
    </div>
    <div class="p-6 flex gap-8 items-start">
      <span class="w-[30%] font-bold">Sinopse</span>
      <span class="w-full"><%= @movie.synopsis %></span>
    </div>
  </div>
</div>
