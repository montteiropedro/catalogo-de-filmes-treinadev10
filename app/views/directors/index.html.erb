<div class="mx-auto max-w-[1280px] flex flex-col border-2 border-neutral-700 rounded-lg">
  <div class="p-6 h-[90px] flex items-center justify-between border-b-2 border-neutral-700">
    <h1 class="m-0 text-xl font-bold text-left">Lista Diretores</h1>
    <%= link_to 'Adicionar diretor', new_director_path, class: "p-2 font-medium bg-primary-500 hover:bg-primary-600 transition-all ease-in-out duration-300 rounded-lg" %>
  </div>

  <% @directors.each do |director| %>
    <%= link_to director.name, director, class: "p-8 w-full hover:bg-neutral-700 hover:bg-opacity-30"%>
  <% end %>
</div>
